<h2>フォロワー一覧</h2>

<div class="table">
	<table>
		<% @users.each do |user| %>
		<tbody>
			<tr>
				<div class="user-index-image">
					<td>
						<%= link_to user_path(user) do %>
							<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",  class: "img-circle") %>
						<% end %>
					</td>
					<td class="user-index-user-name">
						<strong> <%= user.name %> </strong>
					</td>
					<td class="user-index-user-gender">
						<%= user.gender %>
					</td>
					<td class="user-index-user-followers">
						<%= link_to user_followings_path(user) do %>
							フォロー： <%= user.followings.count %>
						<% end %>
					</td>
					<td class="user-index-user-followers">
						<%= link_to user_followers_path(user) do %>
							フォロワー： <%= user.followers.count %>
						<% end %>
					</td>
				</div>
			</tr>
		</tbody>
		<% end %>
	</table>
</div>
