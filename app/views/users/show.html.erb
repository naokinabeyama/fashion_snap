<!-- ユーザー詳細 -->
<div class="user-image">
	<%= attachment_image_tag @user, :profile_image, :fill, 180, 180, fallback: "no_image.jpg", class: "img-circle" %>
</div>

	<div class="user_introduction clearfix">
		<div class="name">
			<strong> <%= @user.name %> </strong>
		</div>
		<div class="gender">
			<%= @user.gender %>
		</div>
		<div class="introduction">
			<%= @user.introduction %>
		</div>

	<div class="follow-text">
		<%= link_to user_followings_path(@user) do %>
		フォロー
		<%= @user.followings.count %>
		<% end %>

		<%= link_to user_followers_path(@user) do %>
		フォロワー
		<%= @user.followers.count %>
		<%  end %>
	</div>

	</div>
	<div class="follow-btn">
		<%= render 'relationships/follow_button', user: @user %>
	</div>

	<% if @user == current_user %>
		<div class="user-post-profiel">
			<%= link_to "プロフィール変更", edit_user_path, class: 'btn btn-success' %>
			<div class="new-post">
				<%= link_to "投稿する", new_post_path, class: 'btn btn-primary btn-lg' %>
			</div>
		</div>
	<% end %>

<!-- ユーザー詳細 -->

<!-- ユーザー投稿一覧 -->
<div class="user-post-all">
	<h2 class="user-post-main">投稿</h2>
	<div class="user-post">
		<% @posts.each do |post| %>
			<%= link_to post_path(post) do %>
			<div class="post-image">
				<%= attachment_image_tag(post, :post_image, :fill, 250, 300) %>
			</div>
			<strong class="user-post-title"> タイトル：　<%= post.title %> </strong>
			<% end %>
			<div class="user-post-favorites">
			<% unless @user == current_user %>
				<div id="favorites_buttons_<%= post.id %>">
					<%= render partial: 'favorites/favorite', locals: {post: post} %>
				</div>
			<% end %>
			</div>
		<% end %>
	</div>
<!-- ユーザー投稿一覧 -->