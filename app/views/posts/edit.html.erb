<div class="edit">
<h2>編集画面</h2>

<%= form_with(model: @post, local: true) do |f| %>


	<div class="field">
		<%= f.label :写真 %>
		<%= f.attachment_field :post_image %>
	</div>

	<div class="field">
		<%= f.label :タイトル %>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :説明文 %>
		<%= f.text_area :body %>
	</div>

	<div class="actions">
		<%= f.submit "投稿", class: "btn btn-primary" %>
	</div>
<% end %>
</div>

