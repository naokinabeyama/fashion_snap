<div class="top-main">
<h1>☆RANKING☆</h1>
<h2>〜いいね数〜</h2>
<% lastfavorite = 0 %>
<% j = 1 %>
<div class="top-user-post">
	<% @favorite_ranks.each.with_index(1) do |post, i| %>
		<% if i == 1 %>
		<% lastfavorite = post.favorites.count %>
		<% end %>
			<% if post.favorites.count != lastfavorite %>
				<% j = i %>
				<div class="">
					<div class="clearfix">
						<div class="top-ranking">
							第<%= j %>位
						</div>
						<div class="top-favorite">
							<%= post.favorites.count %> いいね
						</div>
					</div>
					<div class="top-post-image">
						<%= link_to post_path(post) do %>
							<%= attachment_image_tag(post, :post_image, :fill, 250, 350, fallback: "no_image.jpg") %>
						<% end %>
					</div>
					<div class="">
						<strong class="user-post-title"> タイトル：　<%= post.title %> </strong>
					</div>
				</div>
				<% lastfavorite = post.favorites.count %>
			<% else %>
				<% lastfavorite = post.favorites.count %>
				<div class="">
					<div class="clearfix">
						<div class="top-ranking">
							第<%= j %>位
						</div>
						<div class="top-favorite">
							<%= post.favorites.count %> いいね
						</div>
					</div>
					<div class="top-post-image">
						<%= link_to post_path(post) do %>
							<%= attachment_image_tag(post, :post_image, :fill, 250, 350, fallback: "no_image.jpg") %>
